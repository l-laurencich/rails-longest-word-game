<h2>play a game here</h2>


<ul>
  <% @letters.each do |letter| %>
    <li class="letters"><%= letter.capitalize %></li>
  <% end %>
</ul>

<div class="form">
  <p>What's the longest word you can build from the letters above?</p>
  <form action="/score" method="post">
    <input type="text" name="word" placeholder="Type your answer here">
    <input id="submit" type="submit" value="Find">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
